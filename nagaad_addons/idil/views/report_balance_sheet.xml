<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_bs_template">
        <t t-call="web.html_container">
            <!-- Page header -->
            <div class="page-header">
                <div style="position: absolute; top: 0; left: 0;">
                </div>
                <div style="text-align: center;">
                    <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo.decode()"
                         style="height: 150px;"/>
                    <h1>Balance Sheet Report</h1>
                </div>
            </div>

            <!-- Main Content -->
            <t t-if="doc['asset_accounts']">
                <h2>Assets</h2>
                <table class="table">
                    <tr>
                        <th>Account Code</th>
                        <th>Account Name</th>
                        <th style="text-align: right;">Balance</th>
                    </tr>
                    <t t-foreach="doc['asset_accounts']" t-as="asset">
                        <tr>
                            <td t-esc="asset['account_code']"/>
                            <td t-esc="asset['account_name']"/>
                            <td style="text-align: right;">
                                <span t-esc="asset['balance']"/>
                                <span t-esc="asset['currency_id'] and asset['currency_id'].symbol"/>
                            </td>
                        </tr>
                    </t>
                    <tr>
                        <td colspan="2" style="text-align: right;">
                            <strong>Total Assets</strong>
                        </td>
                        <td style="text-align: right;">
                            <strong t-esc="doc['asset_total']"/>
                            <span t-esc="doc['currency_id'] and doc['currency_id'].symbol"/>
                        </td>
                    </tr>
                </table>
            </t>

            <t t-if="doc['liability_accounts']">
                <h2>Liabilities</h2>
                <table class="table">
                    <tr>
                        <th>Account Code</th>
                        <th>Account Name</th>
                        <th style="text-align: right;">Balance</th>
                    </tr>
                    <t t-foreach="doc['liability_accounts']" t-as="liability">
                        <tr>
                            <td t-esc="liability['account_code']"/>
                            <td t-esc="liability['account_name']"/>
                            <td style="text-align: right;">
                                <span t-esc="liability['balance']"/>
                                <span t-esc="liability['currency_id'] and liability['currency_id'].symbol"/>
                            </td>
                        </tr>
                    </t>
                    <tr>
                        <td colspan="2" style="text-align: right;">
                            <strong>Total Liabilities</strong>
                        </td>
                        <td style="text-align: right;">
                            <strong t-esc="doc['liability_total']"/>
                            <span t-esc="doc['currency_id'] and doc['currency_id'].symbol"/>
                        </td>
                    </tr>
                </table>
            </t>

            <t t-if="doc['equity_accounts']">
                <h2>Equity</h2>
                <table class="table">
                    <tr>
                        <th>Account Code</th>
                        <th>Account Name</th>
                        <th style="text-align: right;">Balance</th>
                    </tr>
                    <t t-foreach="doc['equity_accounts']" t-as="equity">
                        <tr>
                            <td t-esc="equity['account_code']"/>
                            <td t-esc="equity['account_name']"/>
                            <td style="text-align: right;">
                                <span t-esc="equity['balance']"/>
                                <span t-esc="equity['currency_id'] and equity['currency_id'].symbol"/>
                            </td>
                        </tr>
                    </t>
                    <tr class="table-secondary">
                        <td colspan="2" style="text-align: right;">
                            <strong>Total Equity</strong>
                        </td>
                        <td style="text-align: right;">
                            <strong t-esc="doc['equity_total']"/>
                            <span t-esc="doc['currency_id'] and doc['currency_id'].symbol"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: right;">
                            <strong>Net Profit</strong>
                        </td>
                        <td style="text-align: right;">
                            <strong t-esc="doc['net_profit']"/>
                            <span t-esc="doc['currency_id'] and doc['currency_id'].symbol"/>
                        </td>
                    </tr>
                </table>
            </t>

            <t t-if="doc['asset_total'] and doc['liability_total'] and doc['equity_total']">
                <h2>Balance Check</h2>
                <table class="table">
                    <tr>
                        <td style="text-align: right;">
                            <strong>Total Assets</strong>
                        </td>
                        <td style="text-align: right;">
                            <strong t-esc="doc['asset_total']"/>
                            <span t-esc="doc['currency_id'] and doc['currency_id'].symbol"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">
                            <strong>Total Liabilities and Equity</strong>
                        </td>
                        <td style="text-align: right;">
                            <strong t-esc="doc['liability_total'] + doc['equity_total']"/>
                            <span t-esc="doc['currency_id'] and doc['currency_id'].symbol"/>
                        </td>
                    </tr>
                    <tr t-if="doc['asset_total'] != doc['liability_total'] + doc['equity_total']">
                        <td colspan="2" style="color: red;">
                            <strong>Note: Assets do not equal Liabilities + Equity!</strong>
                        </td>
                    </tr>
                </table>
            </t>
        </t>
    </template>

    <record id="action_report_bs" model="ir.actions.report">
        <field name="name">Balance Sheet Report</field>
        <field name="model">idil.chart.account.header</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">idil.report_bs_template</field>
        <field name="report_file">idil.report_bs_template</field>
        <field name="binding_model_id" ref="model_idil_chart_account_header"/>
    </record>

    <record id="view_report_currency_wizard_form" model="ir.ui.view">
        <field name="name">report.currency.wizard.form</field>
        <field name="model">report.currency.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Currency">
                <group>
                    <field name="currency_id"/>
                    <field name="report_date" widget="date"/> <!-- Field for selecting the report date -->
                </group>

                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_currency_wizard" model="ir.actions.act_window">
        <field name="name">Currency Selection</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.currency.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_report_currency_wizard_form"/>
    </record>
</odoo>
